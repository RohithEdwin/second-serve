<% layout("/layouts/boilerplate") -%>
<div class="verified-org">
    <h1>Verified Orphanages</h1>
    <% for(let orphanage of allOrphanages) { %>
        <% if(orphanage.status === "verified") { %>
            <a href="/orphanage/<%= orphanage.id %>">
                <div class="card">
                    <div class="card-img">
                        <img src="<%= orphanage.image %>" alt="<%= orphanage.username %>">
                    </div>
                    <div class="card-body">
                        <span class="verified-badge">âœ“ Verified</span>
                        <p><b><%= orphanage.username %></b></p>
                        <p><%= orphanage.phone %></p>
                        <form action="/admin/reject1/<%=orphanage.id%>">
                            <button>Reject Orphange</button>
                        </form>
                    </div>
                </div>
            </a>
        <% } %>
    <% } %>
</div>

<style>

.verified-org {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.verified-org h1 {
    color: #2d3748;
    margin-bottom: 30px;
    font-weight: 700;
    font-size: 24px;
    position: relative;
    display: block;
    width: 100%;
}

.verified-org h1:after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 60px;
    height: 4px;
    background: linear-gradient(to right, #5a67d8, #38b2ac);
    border-radius: 2px;
}

/* Clear the float and ensure grid appears below header */
.verified-org::after {
    content: "";
    display: table;
    clear: both;
}

/* Style for each orphanage card link */
.verified-org > a {
    display: block;
    float: left;
    width: calc(33.333% - 20px);
    margin: 0 10px 25px 10px;
    text-decoration: none;
    color: inherit;
}

/* Card Styles */
.card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    height: 100%;
}

.card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
}

.card-img {
    height: 200px;
    overflow: hidden;
}

.card-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.card:hover .card-img img {
    transform: scale(1.05);
}

.card-body {
    padding: 20px;
}

.verified-badge {
    display: inline-block;
    background: linear-gradient(to right, #48bb78, #38a169);
    color: white;
    padding: 5px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    margin-bottom: 12px;
}

.card-body p {
    margin-bottom: 8px;
}

.card-body p b {
    font-size: 18px;
    color: #2d3748;
    display: block;
    margin-bottom: 5px;
}

.card-body p:last-of-type {
    color: #718096;
    font-size: 14px;
    margin-bottom: 15px;
}

/* Button Styles */
form {
    margin-top: 15px;
}

button {
    width: 100%;
    padding: 12px;
    background: #f56565;
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

button:hover {
    background: #e53e3e;
    transform: translateY(-2px);
}

/* Responsive Design */
@media (max-width: 992px) {
    .verified-org > a {
        width: calc(50% - 20px);
    }
}

@media (max-width: 576px) {
    .verified-org > a {
        width: calc(100% - 20px);
        float: none;
    }
    
    .verified-org {
        padding: 15px;
    }
}
</style>
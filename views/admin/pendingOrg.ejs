<% layout("/layouts/boilerplate") -%>
<div class="pending-org">
    <h1>Pending Orphanages</h1>
    <% for(let orphanage of allOrphanages) { %>
        <% if(orphanage.status === "pending") { %>
            <div class="card">
                <div class="card-img">
                    <img src="<%= orphanage.image %>" alt="<%= orphanage.username %>">
                </div>
                <div class="card-body">
                    <p><b><%= orphanage.username %></b></p>
                    <p><%= orphanage.description %></p> 
                    <p><%= orphanage.email %></p>  
                    <p><%= orphanage.address %></p>
                    <p><%= orphanage.location %></p>
                    <p><%= orphanage.phone %></p>
                    <p><%= orphanage.childrenCount %> children</p> 
                    <form action="/admin/verify/<%=orphanage.id%>" method="GET">
                        <button type="submit">Verify Orphanage</button>
                    </form>
                    <br>
                    <form action="/admin/reject/<%=orphanage.id%>" method="GET">
                        <button type="submit">Reject Orphanage</button>
                    </form>
                </div>
            </div>
        <% } %>
    <% } %>
</div>

<style>
    .pending-org {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.pending-org h1 {
    color: #2d3748;
    margin-bottom: 30px;
    font-weight: 700;
    font-size: 24px;
    position: relative;
    display: block;
    width: 100%;
    grid-column: 1 / -1; /* This makes the header span all columns */
}

.pending-org h1:after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 60px;
    height: 4px;
    background: linear-gradient(to right, #f56565, #ed8936);
    border-radius: 2px;
}

button {
    width: 100%;
    padding: 12px 20px;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 14px;
}

form:first-of-type button {
    background: linear-gradient(to right, #48bb78, #38a169);
    color: white;
    box-shadow: 0 4px 10px rgba(72, 187, 120, 0.3);
}

form:first-of-type button:hover {
    background: linear-gradient(to right, #38a169, #2f855a);
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(72, 187, 120, 0.4);
}

form:last-of-type button {
    background: linear-gradient(to right, #f56565, #ed8936);
    color: white;
    box-shadow: 0 4px 10px rgba(245, 101, 101, 0.3);
}

form:last-of-type button:hover {
    background: linear-gradient(to right, #e53e3e, #dd6b20);
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(245, 101, 101, 0.4);
}

/* Grid layout for 3 columns */
.pending-org {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 25px;
}

/* Card styles - direct children of .pending-org that are .card */
.pending-org > .card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    height: auto;
    display: flex;
    flex-direction: column;
}

.pending-org > .card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
}

.card-img {
    height: 200px;
    overflow: hidden;
}

.card-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.card:hover .card-img img {
    transform: scale(1.05);
}

.card-body {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
}

.card-body p {
    margin-bottom: 8px;
    color: #718096;
    font-size: 14px;
    line-height: 1.5;
}

.card-body p b {
    font-size: 18px;
    color: #2d3748;
    display: block;
    margin-bottom: 10px;
    font-weight: 600;
}

/* Make the first paragraph (username) stand out */
.card-body p:first-of-type {
    margin-bottom: 15px;
}

/* Responsive Design */
@media (max-width: 992px) {
    .pending-org {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 576px) {
    .pending-org {
        grid-template-columns: 1fr;
        padding: 15px;
    }
}
</style>
<% layout("/layouts/boilerplate") -%>
<div class="dashboard">
    <div class="side-panel">
        <h1>Admin Dashboard</h1>
        
        <div class="status-section">
            <p class="status-verified">✓ Administrator Account</p>
            <p>Manage orphanage verifications</p>
        </div>

        <div class="dashboard-nav">
            <a href="/admin/pending-org">Pending Orphanages</a>
            <a href="/admin/verified-org">Verified Orphanages</a>
            <a href="/admin/rejected-org">Rejected Orphanages</a>
        </div>
    </div>

    <div class="dashboard-body">
        <div class="welcome-container">
            <div class="welcome-icon">⚙️</div>
            <h2 class="welcome-title">Admin Dashboard</h2>
            <p class="welcome-text">
                Welcome to the administration panel. Select an option from the side panel to 
                manage orphanage verifications, view donor accounts, and oversee platform operations.
            </p>
        </div>
    </div>
</div>

<style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        :root {
            --primary: #5a67d8;
            --primary-light: #c3dafe;
            --secondary: #38b2ac;
            --success: #48bb78;
            --warning: #ed8936;
            --danger: #f56565;
            --text: #2d3748;
            --text-light: #718096;
            --bg-light: #f9f7fe;
            --white: #ffffff;
            --shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            --shadow-hover: 0 15px 30px rgba(0, 0, 0, 0.1);
            --radius: 16px;
        }

        body {
            background: linear-gradient(135deg, #f9f7fe 0%, #e6f3ff 100%);
            min-height: 100vh;
            color: var(--text);
            line-height: 1.6;
        }

        .dashboard {
            display: flex;
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
            gap: 30px;
        }

        /* Side Panel Styles */
        .side-panel {
            flex: 0 0 300px;
            background: var(--white);
            border-radius: var(--radius);
            padding: 25px;
            box-shadow: var(--shadow);
            height: fit-content;
            position: sticky;
            top: 20px;
        }

        .side-panel h1 {
            color: var(--primary);
            margin-bottom: 25px;
            font-weight: 700;
            font-size: 24px;
            padding-bottom: 15px;
            border-bottom: 1px solid #eee;
        }

        /* Status Section */
        .status-section {
            background: var(--bg-light);
            border-radius: var(--radius);
            padding: 20px;
            margin-bottom: 25px;
            border-left: 4px solid var(--primary);
        }

        .status-verified {
            color: var(--success);
            font-weight: 600;
            margin-bottom: 8px;
        }

        /* Dashboard Navigation */
        .dashboard-nav {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .dashboard-nav a {
            display: block;
            padding: 15px 20px;
            text-decoration: none;
            color: var(--text);
            font-weight: 500;
            font-size: 16px;
            transition: all 0.3s ease;
            border-radius: 10px;
            border-left: 4px solid transparent;
        }

        .dashboard-nav a:hover {
            background-color: var(--primary-light);
            color: var(--primary);
            border-left: 4px solid var(--primary);
        }

        /* Button Styles */
        .btn {
            display: inline-block;
            padding: 12px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            text-align: center;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background: linear-gradient(to right, var(--primary), var(--secondary));
            color: white;
            box-shadow: 0 4px 10px rgba(90, 103, 216, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(90, 103, 216, 0.4);
        }

        .btn-outline {
            background: transparent;
            color: var(--primary);
            border: 2px solid var(--primary);
        }

        .btn-outline:hover {
            background: var(--primary);
            color: white;
        }

        /* Dashboard Body */
        .dashboard-body {
            flex: 1;
        }

        .welcome-container {
            background: var(--white);
            border-radius: var(--radius);
            padding: 40px;
            box-shadow: var(--shadow);
            text-align: center;
        }

        .welcome-icon {
            font-size: 64px;
            margin-bottom: 20px;
        }

        .welcome-title {
            color: var(--text);
            margin-bottom: 15px;
            font-weight: 700;
            font-size: 32px;
            position: relative;
            display: inline-block;
        }

        .welcome-title:after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 4px;
            background: linear-gradient(to right, var(--primary), var(--secondary));
            border-radius: 2px;
        }

        .welcome-text {
            color: var(--text-light);
            max-width: 600px;
            margin: 0 auto 30px;
            font-size: 18px;
            line-height: 1.7;
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .dashboard {
                flex-direction: column;
            }
            
            .side-panel {
                position: static;
                width: 100%;
                margin-bottom: 20px;
            }
            
            .dashboard-nav {
                flex-direction: row;
                flex-wrap: wrap;
            }
            
            .dashboard-nav a {
                flex: 1;
                min-width: 200px;
                text-align: center;
                border-left: none;
                border-bottom: 3px solid transparent;
            }
            
            .dashboard-nav a:hover {
                border-left: none;
                border-bottom: 3px solid var(--primary);
            }
        }

        @media (max-width: 576px) {
            .dashboard-nav a {
                min-width: 100%;
            }
            
            .welcome-container {
                padding: 25px 20px;
            }
        }
</style>
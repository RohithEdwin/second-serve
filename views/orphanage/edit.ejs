<% layout("/layouts/boilerplate") -%>
<div class="edit">
    <h3>Edit Profile</h3>
    <form  method="POST" action="/orphanage/<%=orphanage._id%>">
        <div class="form-group">
            <label for="username">Name</label>
            <input type="text" name="username" value="<%= orphanage.username %>" required>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" required placeholder="Tell us about your orphanage"><%= orphanage.description %></textarea>
        </div>

        <div class="form-group">
            <label for="image">Image URL</label>
            <input type="text" name="image" value="<%= orphanage.image %>">
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" value="<%= orphanage.email %>" required>
        </div>

        <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="text" name="phone" value="<%= orphanage.phone %>" required>
        </div>

        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" name="address" required placeholder="Enter the address" value="<%= orphanage.address %>">
        </div>

        <div class="form-group">
            <label for="childrenCount">Children Count</label>
            <input type="number" name="childrenCount" required placeholder="Enter the number of children" value="<%= orphanage.childrenCount %>">
        </div>
                
        <button type="submit" class="edit-btn">Save Changes</button>
    </form>
<div>

<style>
    .edit {
    max-width: 600px;
    margin: 40px auto;
    padding: 40px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
}

.edit:hover {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
}

.edit h3 {
    color: #2d3748;
    margin-bottom: 10px;
    font-weight: 700;
    font-size: 26px;
    position: relative;
    display: inline-block;
}

.edit h3:after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 60px;
    height: 4px;
    background: linear-gradient(to right, #5a67d8, #38b2ac);
    border-radius: 2px;
}

/* Form Styles */
form {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-top: 30px;
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

label {
    color: #2d3748;
    font-weight: 600;
    font-size: 14px;
    margin-bottom: 5px;
}

input[type="text"],
input[type="email"],
input[type="number"],
textarea {
    padding: 14px 16px;
    border: 2px solid #e2e8f0;
    border-radius: 8px;
    font-size: 16px;
    transition: all 0.3s ease;
    background: #f8f9fa;
    color: #2d3748;
    font-family: inherit;
}

input[type="text"]:focus,
input[type="email"]:focus,
input[type="number"]:focus,
textarea:focus {
    outline: none;
    border-color: #5a67d8;
    background: white;
    box-shadow: 0 0 0 3px rgba(90, 103, 216, 0.1);
}

textarea {
    min-height: 120px;
    resize: vertical;
    line-height: 1.5;
}

/* Number input specific styling */
input[type="number"] {
    -moz-appearance: textfield;
}

input[type="number"]::-webkit-outer-spin-button,
input[type="number"]::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

/* Button Styles */
.edit-btn {
    padding: 16px 20px;
    background: linear-gradient(to right, #5a67d8, #38b2ac);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 16px;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 10px;
    box-shadow: 0 4px 12px rgba(90, 103, 216, 0.3);
}

.edit-btn:hover {
    background: linear-gradient(to right, #4c51bf, #319795);
    transform: translateY(-2px);
    box-shadow: 0 6px 18px rgba(90, 103, 216, 0.4);
}

.edit-btn:active {
    transform: translateY(0);
}

/* Responsive Design */
@media (max-width: 768px) {
    .edit {
        margin: 20px;
        padding: 30px 25px;
    }
    
    .edit h3 {
        font-size: 24px;
    }
}

@media (max-width: 576px) {
    .edit {
        margin: 15px;
        padding: 25px 20px;
    }
    
    input[type="text"],
    input[type="email"],
    input[type="number"],
    textarea {
        padding: 12px 14px;
    }
    
    .edit-btn {
        padding: 14px 16px;
    }
    
    textarea {
        min-height: 100px;
    }
}

/* Focus styles for accessibility */
input:focus-visible,
textarea:focus-visible {
    outline: 2px solid #5a67d8;
    outline-offset: 2px;
}

/* Placeholder styling */
::placeholder {
    color: #a0aec0;
    opacity: 1;
}

:-ms-input-placeholder {
    color: #a0aec0;
}

::-ms-input-placeholder {
    color: #a0aec0;
}

/* Description textarea specific styling */
textarea[name="description"] {
    border-left: 3px solid #e2e8f0;
}

textarea[name="description"]:focus {
    border-left-color: #5a67d8;
}
</style>